if milk=="yes":
  print ("pour milk")
cocoa_powder=input ("do you want cocoa powder, say yes or no")
if cocoa_powder=="yes":
  print ("add cocoa powder")
print ("step 4:keep stirring until coffee is ready")
print ("Finish")
